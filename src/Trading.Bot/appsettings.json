{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "/bot/logs/log.txt" }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/bot/db/bot.db;"
  },
  "BotOptions": [
    {
      "Name": "MARKET_MAKER",
      "Setting": {
        "Symbol": "BTCUSDT",
        "Spread": "3",
        "OrderValue": "20",
        "OrderQuantity": "2",
        "Interval": "0"
      }
    }
  ],
  "ApiKeys": {
    "Key": "",
    "Secret": ""
  }
}
