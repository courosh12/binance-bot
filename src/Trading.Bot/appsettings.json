{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "/bot/logs/log.txt" }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/bot/db/bot.db;"
  },
  "BotOptions": [
    {
      "Name": "MARKET_MAKER",
      "Setting": {
        "Symbol": "MATICUSDT",
        "Spread": "3",
        "OrderValue": "50",
        "OrderQuantity": "4",
        "Interval": "1440"
      }
    },
    {
      "Name": "PORTOFOLIO_BALANCER",
      "Setting": {
        "Market": "USDT",
        "Allocation" : "MATIC.50,USDT.50",
        "Trigger": "1",
        "Interval": "1440"
      }
    }
  ],
  "ApiKeys": {
    "Key": "",
    "Secret": ""
  }
}
